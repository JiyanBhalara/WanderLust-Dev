<style>
  .btn-search{
    border-radius: 1rem;
    display: flex;
    align-items: center;
    background-color: #ff3a5e;
    color: #fff;
    border-color: #fff;
  }

  .btn-search:hover{
    background-color: #ff3a5e;
    color: #fff;
    border-color: #fff;
  }
  
  .fa-magnifying-glass{
    color: #fff !important;
    margin-right: 5px;
  }

  .search-bar{
    border-radius: 1rem;
    width: 40vh;
    text-align: center;
  }
</style>

<nav class="navbar navbar-expand-lg navbar-light bg-light sticky-top">
  <div class="container-fluid">
    <i class="fa-regular fa-compass"></i>
    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav ms-2">
        <a class="nav-link" href="/listings">Explore</a>
      </div>
      <div class="navbar-nav ms-auto">
        <form class="d-flex" action="/listings/search" method="GET">
          <label for="search"></label>
          <input class="form-control me-2 search-bar" type="search" name="search" id="search" placeholder="Search Destination" aria-label="Search">
          <button class="btn btn-outline-danger btn-search" type="submit"><i class="fa-solid fa-magnifying-glass"></i>Search</button>
        </form>
      </div>
      
      <div class="navbar-nav ms-auto">
        <a class="nav-link" href="/listings/new">Airbnb your home</a>
        <% if(!currentUser){ %>
        <a class="nav-link" aria-current="page" href="/signup"><b>Sign Up</b></a>
        <a class="nav-link" href="/login"><b>Log In</b></a>
        <% } %> <% if(currentUser){ %>
        <a class="nav-link" href="/logout"><b>Log Out</b></a>
        <% } %>
      </div>
    </div>
  </div>
